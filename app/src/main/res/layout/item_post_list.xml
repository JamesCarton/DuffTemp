<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_item_post_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/tv_title"
                fontPath="@string/font_heading_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="@string/at_dufflerman"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_home_title_textsize_sub"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="@string/desc"
                    android:textColor="@color/dray_much" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/icon_map_marker"
                    android:textColor="@color/gray_back"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/tv_celsius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:text="24\u2103"
                    android:textColor="@color/gray_back" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/sun"
                    android:gravity="center"
                    android:textColor="@color/gray_back"
                    android:textSize="@dimen/btn_home_title_textsize_sub" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_big"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            app:layout_aspectRatio="150%"
            app:layout_widthPercent="100%" />

    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tv_duffler_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/post_list_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="5dp"/>

        <TextView
            android:id="@+id/tv_duffler_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="#duffler012345679"
            android:textColor="@color/dray_much"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:text="@string/just_now"
        android:textColor="@color/dray_much"
        android:textSize="@dimen/small_text_size_9"
        android:visibility="gone"/>

</LinearLayout>